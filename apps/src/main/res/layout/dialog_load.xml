<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_load"
    android:gravity="center_vertical"
    android:minHeight="100dp"
    android:minWidth="200dp"
    android:paddingEnd="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    android:paddingStart="20dp">

    <fr.castorflex.android.circularprogressbar.CircularProgressBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:visibility="visible"
        android:indeterminate="true"
        app:cpb_colors="@array/load_colors"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="3dp"
        app:cpb_sweep_speed="1.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/login_load"
        android:textColor="#99ffffff"
        android:textSize="14sp" />
</LinearLayout>